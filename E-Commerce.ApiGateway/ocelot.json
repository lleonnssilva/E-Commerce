{
  "GlobalConfiguration": {
    "BaseUrl": "https://localhost:5036",
    "RateLimitOptions": {
      "QuotaExceededMessage": "Request not allowed",
      "HttpStatusCode": 909
    }
  },
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/products",
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        //"AllowedScopes": ["api"]
      },
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5278
        }
      ],

      "UpstreamPathTemplate": "/gateway/product",
      "RateLimitOptions": {
        "ClientWhiteList": [],
        "EnableRateLimiting": true,
        "Period": "1s",
        "PeriodTimespan": 1,
        "Limit": 1
      },
      "UpstreamHttpMethod": [ "POST", "PUT", "GET" ]
    },

    {
      "DownstreamPathTemplate": "/api/products/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5278
        }
      ],
      "UpstreamPathTemplate": "/gateway/product/{id}",
      "UpstreamHttpMethod": [ "GET", "DELETE" ]
    },


    {
      "DownstreamPathTemplate": "/api/orders",
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        //"AllowedScopes": [ "api" ]
      },
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5255
        }
      ],
      "UpstreamPathTemplate": "/gateway/order",
      "UpstreamHttpMethod": [ "POST", "PUT", "GET" ]
    },
    {
      "DownstreamPathTemplate": "/api/orders/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5255
        }
      ],
      "UpstreamPathTemplate": "/gateway/order/{id}",
      "UpstreamHttpMethod": [ "GET", "DELETE" ]
    },


    {
      "DownstreamPathTemplate": "/api/customers",
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        //"AllowedScopes": [ "api" ]
      },
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5224
        }
      ],
      "UpstreamPathTemplate": "/gateway/customer",
      "UpstreamHttpMethod": [ "POST", "PUT", "GET" ]
    },
    {
      "DownstreamPathTemplate": "/api/customers/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5224
        }
      ],
      "UpstreamPathTemplate": "/gateway/customer/{id}",
      "UpstreamHttpMethod": [ "GET", "DELETE" ]
    },


    {
      "DownstreamPathTemplate": "/api/accounts/authenticate",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7035
        }
      ],
      "UpstreamPathTemplate": "/gateway/authenticate",
      "UpstreamHttpMethod": [ "POST" ]
    },
    {
      "DownstreamPathTemplate": "/api/accounts/register",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7035
        }
      ],
      "UpstreamPathTemplate": "/gateway/register",
      "UpstreamHttpMethod": [ "POST", "GET" ]
    }
  ]
}
